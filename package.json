{
  "name": "bailo",
  "private": true,
  "description": "Meta-package for Bailo frontend/backend",
  "license": "Apache-2.0",
  "version": "0.4.0",
  "scripts": {
    "cy:open": "npm --workspace=frontend run cy:open",
    "cy:run": "npm --workspace=frontend run cy:run",
    "certs": "npm --workspace=backend run certs",
    "script": "npm --workspace=backend run script",
    "test": "npm --workspaces test run",
    "lint": "npm --workspaces run lint",
    "style": "prettier --write .",
    "check-style": "prettier --check .",
    "prepare": "husky",
    "seed": "npm --workspace=backend run seed"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "workspaces": [
    "backend/",
    "frontend/"
  ]
}
